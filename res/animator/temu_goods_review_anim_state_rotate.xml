<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <objectAnimator android:duration="200" android:repeatCount="0" android:valueTo="0" android:propertyName="rotation" />
    </item>
    <item android:state_enabled="false">
        <objectAnimator android:duration="200" android:repeatCount="0" android:valueTo="180" android:propertyName="rotation" />
    </item>
</selector>