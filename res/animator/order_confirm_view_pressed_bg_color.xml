<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <objectAnimator android:duration="90" android:repeatCount="0" android:valueTo="#14000000" android:propertyName="backgroundColor" />
    </item>
    <item android:state_pressed="false">
        <objectAnimator android:duration="90" android:valueTo="#fff6f6f6" android:propertyName="backgroundColor" />
    </item>
</selector>