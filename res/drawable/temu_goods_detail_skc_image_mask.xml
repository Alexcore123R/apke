<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false" android:state_activated="true">
        <shape android:shape="rectangle">
            <corners android:radius="2.0dip" />
            <solid android:color="#08000000" />
            <stroke android:width="0.5dip" android:color="#ff777777" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="2.0dip" />
            <solid android:color="#08000000" />
            <stroke android:width="2.0dip" android:color="@android:color/black" />
        </shape>
    </item>
    <item android:state_activated="false">
        <shape android:shape="rectangle">
            <corners android:radius="2.0dip" />
            <solid android:color="#b8ffffff" />
            <stroke android:width="0.5dip" android:color="#ff555555" android:dashWidth="3.0dip" android:dashGap="3.0dip" />
        </shape>
    </item>
</selector>