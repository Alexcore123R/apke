<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="18.0dip" />
            <solid android:color="@color/app_comment_base_black_button_un_pressed_color" />
            <stroke android:width="1.5dip" android:color="@color/app_comment_main_color" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="18.0dip" />
            <solid android:color="@color/app_comment_base_black_button_pressed_color" />
            <stroke android:width="1.5dip" android:color="@color/app_comment_main_color" />
        </shape>
    </item>
</selector>